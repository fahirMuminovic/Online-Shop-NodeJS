<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    
    <main>
        <% if (successMessage) {%>
        <div class="user-message user-message--success"><%= successMessage %></div>
        <% } %>
        
        <% if(prods.length>0) { %>
        <div class="grid">
            
            <% prods.forEach(product=> { %>
            <article class="card product-item">
                
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                
                <div class="card__image">
                    <img src="<%= product.imagePath %>" alt="<%= product.title %>" />
                </div>
                
                <div class="card__content">
                    <h2 class="product__price">$<%= product.price %></h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
                
                <div class="card__actions">
                    <a class="btn" href="/products/<%= product._id %>">Details</a>
                    <%- include('../includes/add-to-cart', {product: product}) %>
                </div>
                
            </article>
            <% }); %>
            
        </div>
        <section class="pagination">
            <% if(pagination.currentPage !==1) {%>
            	<a href="/?page=1">1</a>
            <% } %>
            
            <% if(pagination.hasPreviousPage && pagination.previousPage !== 1) {%>
            	<a href="/?page=<%= pagination.previousPage %>"><%= pagination.previousPage %></a>
            <% } %>
            
			<a href="/?page=<%= pagination.currentPage %>" class="active"><%= pagination.currentPage %></a>
            
			<% if (pagination.hasNextPage) {%>
            	<a href="/?page=<%= pagination.nextPage %>"><%= pagination.nextPage %></a>
            <% } %>
            
			<% if(pagination.lastPage !== pagination.currentPage && pagination.nextPage !== pagination.lastPage) {%>
            	<a href="/?page=<%= pagination.lastPage %>"><%= pagination.lastPage %></a>
            <% } %>
        </section>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
    