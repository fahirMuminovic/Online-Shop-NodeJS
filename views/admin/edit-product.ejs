<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <main>
          <form class="product-form" action="/admin/<% if(editMode) { %>edit-product<% } else { %>add-product<% } %>"
            method="POST">

              <div class="form-control">
                  <label for="title">Title</label>
                  <input type="text" name="title" id="title" value="<% if(editMode || inputErrors) {%><%=product.title%><% }%>">
              </div>
              <div class="form-control">
                  <label for="imgUrl">Image URL</label>
                  <input type="text" name="imgUrl" id="imgUrl" value="<% if(editMode || inputErrors) {%><%=product.imgUrl%><% }%>">
              </div>
              <div class="form-control">
                  <label for="price">Price</label>
                  <input type="number" name="price" id="price" step="0.01"
                    value="<% if(editMode || inputErrors) {%><%=product.price%><% }%>">
              </div>
              <div class="form-control">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" cols="30" rows="5"
                    placeholder="Enter a description"><% if(editMode || inputErrors) {%><%=product.description%><% }%></textarea>
              </div>

              <% if(editMode) { %>
                  <input type="hidden" name="productId" value="<%= product._id %>">
              <% } %>

              <button class="btn" type="submit">
                  <% if(editMode) { %> Update Product <% } else { %> Add Product <% } %>
              </button>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          </form>
      </main>

<%- include('../includes/end.ejs') %>